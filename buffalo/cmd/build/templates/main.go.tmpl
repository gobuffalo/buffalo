package main

import (
  "fmt"
  "log"
  "os"

  "github.com/markbates/grift/grift"
  _ "<%= opts.ActionsPkg %>"
  <%= if (opts.WithPop) { %>
  "github.com/gobuffalo/packr"
  "github.com/markbates/pop"
  "<%= opts.ModelsPkg %>"
  <% } %>
  <%= if (opts.WithGrifts) { %>
  _ "<%= opts.GriftsPkg %>"
  <% } %>
)

var version = "unknown"
var buildTime = "unknown"

func main() {
  args := os.Args
  if len(args) == 1 {
    originalMain()
  }
  c := args[1]
  switch c {
  <%= if (opts.WithPop) { %>
  case "migrate":
    migrate()
  <% } %>
  case "start", "run", "serve":
    printVersion()
    originalMain()
  case "version":
    printVersion()
  case "task", "t", "tasks":
    c := grift.NewContext(args[2])
    if len(args) > 2 {
      c.Args = args[3:]
    }
    err := grift.Run(args[2], c)
    if err != nil {
      log.Fatal(err)
    }
  default:
    log.Fatalf("Could not find a command named: %s", c)
  }
}

func printVersion() {
  fmt.Printf("<%= opts.Name.Title() %> version %s (%s)\n\n", version, buildTime)
}

<%= if (opts.WithPop) { %>
func migrate() {
  box, err := pop.NewMigrationBox(packr.NewBox("./migrations"), models.DB)
  if err != nil {
    log.Fatalf("Failed to unpack migrations: %s", err)
  }
  err = box.Up()
  if err != nil {
    log.Fatalf("Failed to run migrations: %s", err)
  }
}
<% } %>
