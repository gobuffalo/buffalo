<div class="page-header">
  <h1>{{.opts.ModelName.Model}}#Show</h1>
</div>

<ul class="list-unstyled list-inline">
  <li><a href="<%= {{.opts.Name.VarCasePlural}}Path() %>" class="btn btn-info">Back to all {{.opts.ModelName.ModelPlural}}</a></li>
  <li><a href="<%= edit{{.opts.Name.Model}}Path({ {{.opts.ModelName.UnderSingular}}_id: {{.opts.ModelName.VarCaseSingular}}.ID })%>" class="btn btn-warning">Edit</a></li>
  <li><a href="<%= {{.opts.Name.VarCaseSingular}}Path({ {{.opts.ModelName.UnderSingular}}_id: {{.opts.ModelName.VarCaseSingular}}.ID })%>" data-method="DELETE" data-confirm="Are you sure?" class="btn btn-danger">Destroy</a>
</ul>

{{ range $p := .opts.Props -}}
<p>
  <strong>{{ $p.Name }}</strong>: <%= {{$.opts.ModelName.VarCaseSingular}}.{{$p.Name}} %>
</p>
{{ end -}}

